
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.metadata.title %></title>
  <link rel='stylesheet' href='/stylesheets/output.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  
  <!-- font-awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-200">
  <%- include('../components/navbar/navbar.ejs') %>

  <header class=" p-8 m-auto w-full max-w-screen-lg rounded-xl rounded-bl-none rounded-br-none block bg-white">
    <div class="relative">
      <img src="<%= data.metadata.cover %>" alt="<%= data.metadata.title %>" class="w-full rounded-xl">

      <!-- Categorias -->
      <div class="absolute top-3 left-2">
        <% data.metadata.categories.forEach(element => { %>
          <span class="bg-red-700 px-6 font-semibold py-2 text-white  rounded-full text-center"><%= element %></span>
          <% }) %>
      </div>
    </div>

    <section class="flex  justify-start items-center p-4 space-x-4">
      
      <!-- data de publicação -->
      <div class=" flex items-center justify-center space-x-2   ">
        <div class="text-red-700">
            <i class="fa-solid fa-calendar-days"></i>
        </div>
        <p class="font-semibold"><%= data.metadata.publicationDate %></p>
      </div>

      <!-- visualizações -->
      <div class="flex items-center space-x-2 justify-center    ">
        <div class="text-red-700">
            <i class="fa-solid fa-fire"></i>
        </div>
        <h2 class="text-gray-700 font-semibold "><%= data.metadata.views %></h2>
      </div>
    </section>
    <h1 class="text-4xl font-semibold my-10"><%= data.metadata.title %></h1>
  </header>


  <main class="p-8 m-auto w-full max-w-screen-lg rounded-xl block bg-white rounded-tl-none rounded-tr-none">

    
    <% data.content.forEach(element => { %>

      <!-- Titulo -->
      <% if(element.type === "title"){ %>
        <h2 class="my-5 text-3xl font-semibold"><%= element.content %></h2>
      <% } %> 

      <!-- Subtitulo -->
      <% if(element.type === "caption"){ %>
        <h3 class="my-2 text-xl font-semibold"><%= element.content %></h3>
      <% } %> 

      <!-- Paragrafo -->
      <% if(element.type === "paragraph"){ %>
        <p class="my-5 text-gray-600 text-lg leading-relaxed"><%= element.content %></p>
      <% } %> 
      
      <!-- Imagem -->
      <% if(element.type === "image"){ %>
        <img src="<%= element.src %>" alt="<%= element.alt %>" class="w-auto m-auto h-[50vh] rounded-xl">
      <% } %> 
      

      <!-- Lista -->
      <% if(element.type === "list"){ %>
        <ul class="list-disc p-2">
          <% element.items.forEach(elementItem => { %>
            <li><%= elementItem %></li>
          <% }) %>
        </ul>
      <% } %> 



    <% }) %>
    

  </main>

</body>
</html>


